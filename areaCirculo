#include<stdio.h>
int main(){
    float r, r2, r3;
    printf("Radio del primer circulo\n");
    scanf(" %f", &r);
    printf("Radio del segundo circulo\n");
    scanf("%f", &r2);
    printf("Radio del tercer circulo\n");
    scanf("%f", &r3);
    printf("El area del primer circulo es: %f\n", 3.1416*r*r);
    printf("El area del segundo circulo es: %f\n", 3.1416*r2*r2);
    printf("El area del tercer circulo es: %f\n", 3.1416*r3*r3);
    return 0;
}
